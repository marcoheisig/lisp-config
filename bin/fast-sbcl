#!/bin/sh

SBCL=~/lisp/impl/fast-sbcl

export SBCL_HOME=$SBCL/contrib

if [ `hostname` = debian ]; then
    FASL_DIR=/tmp/fasls
    DYNAMIC_SPACE=8GB
else
    FASL_DIR=~/lisp/fasls
    DYNAMIC_SPACE=4GB
fi

exec $SBCL/src/runtime/sbcl --dynamic-space-size $DYNAMIC_SPACE \
    --core $SBCL/output/sbcl.core "$@"
