#!/bin/sh

CCL_DIR=~/lisp/impl/ccl

if [ `hostname` = desktop ]; then
    FASL_DIR=/tmp/fasls
else
    FASL_DIR=~/lisp/fasls
fi

if [ `uname -m` = x86_64 ]
then
    CCL=${CCL_DIR}/lx86cl64
else
    CCL=${CCL_DIR}/lx86cl
fi

export CCL_DEFAULT_DIRECTORY=${CCL_DIR}

dump_core() {
    $CCL -n --load ~/lisp/configs/ccl.lisp -K utf-8 \
    --eval "(ccl:save-application \"$FASL_DIR/ccl-core\")"
}

if [ ! -e $FASL_DIR/ccl-core ]; then
    dump_core
fi

exec $CCL -n -I $FASL_DIR/ccl-core "$@"
